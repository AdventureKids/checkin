{
  "name": "churchcheck",
  "productName": "ChurchCheck",
  "private": true,
  "version": "2.0.0",
  "description": "Kids check-in that makes them want to come back",
  "author": "ChurchCheck",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "node print-server.cjs",
    "start:cloud": "node server-cloud.cjs",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:all": "npm run build && electron-builder --mac --win"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "canvas": "^3.2.1",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "pg": "^8.18.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.10.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tailwindcss": "^4.1.18",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.churchcheck.app",
    "productName": "ChurchCheck",
    "directories": {
      "output": "release",
      "buildResources": "electron/icons"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!electron/icons/*.iconset",
      "!electron/icons/*.ico.png"
    ],
    "asar": true,
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "electron/icons/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "ChurchCheck",
      "icon": "electron/icons/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ChurchCheck"
    },
    "linux": {
      "icon": "electron/icons",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
